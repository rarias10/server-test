# Server
NODE_ENV=production
PORT=8080
HOST=0.0.0.0   # optional, makes sure Express binds on all interfaces

# CORS: must allow your frontendâ€™s real origin (your Nginx web container)
# For localhost dev:
# CORS_ORIGIN=http://localhost:5173
CORS_ORIGIN=http://13.59.243.216:8081

# Sessions / Redis
SESSION_SECRET=please-change-me
REDIS_URL=redis://redis:6379    # use docker-compose service name, not localhost

# Cookie security
# Browsers see http://13.59.243.216:8081 and http://13.59.243.216:8080 as different *origins*
# so CORS + SameSite settings matter.
# With HTTP only (no HTTPS), leave Secure=false
COOKIE_SAMESITE=lax
COOKIE_SECURE=false

# MySQL
MYSQL_HOST=mysql                # service name from docker-compose.yml
MYSQL_PORT=3306
MYSQL_USER=app_user
MYSQL_PASSWORD=app_password
MYSQL_DATABASE=app_db

