# Server
NODE_ENV=production
PORT=8080

# CORS: set to where your frontend is (for quick test you can allow a local IP or a domain)
CORS_ORIGIN=http://localhost:5173

# Sessions / Redis
SESSION_SECRET=please-change-me
REDIS_URL=redis://redis:6379

# Cookie security
# For cross-site over HTTPS, set: COOKIE_SAMESITE=none and COOKIE_SECURE=true
COOKIE_SAMESITE=lax
COOKIE_SECURE=false

# MySQL (the compose service name is "mysql")
MYSQL_HOST=mysql
MYSQL_PORT=3306
MYSQL_USER=app_user
MYSQL_PASSWORD=app_password
MYSQL_DATABASE=app_db
