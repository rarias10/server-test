# Server
NODE_ENV=production
PORT=8080
HOST=0.0.0.0   # (only if your server supports HOST; ensures it binds publicly)

# CORS â€” allow your web container origin (13.59.243.216:8081)
# If your code expects CORS_ORIGIN (singular), keep it; if it expects CORS_ORIGINS (comma list), switch accordingly.
CORS_ORIGIN=http://13.59.243.216:8081
# Example multi:
# CORS_ORIGINS=http://13.59.243.216:8081,http://localhost:5173

# Sessions / Redis
SESSION_SECRET=super-secret-change-me
REDIS_URL=redis://redis:6379    # <-- use service name, not localhost

# Cookie security
# Different ports are a different *origin* (so you need CORS) but the same *site*,
# so Lax is usually fine for cookies here.
COOKIE_SAMESITE=lax
COOKIE_SECURE=false             # set true only when you move to HTTPS

# MySQL
MYSQL_HOST=mysql                # <-- service name, not 127.0.0.1
MYSQL_PORT=3306
MYSQL_USER=app_user
MYSQL_PASSWORD=app_password
MYSQL_DATABASE=app_db
