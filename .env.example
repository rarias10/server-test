# Server
NODE_ENV=development
PORT=8080

# CORS
# Single origin or comma-separated list (no spaces), e.g.:
# CORS_ORIGIN=http://localhost:5173,https://yourapp.com
CORS_ORIGIN=http://localhost:5173

# Sessions / Redis
SESSION_SECRET=super-secret-change-me
REDIS_URL=redis://localhost:6379

# Cookie security (prod defaults shown)
# sameSite can be: lax | strict | none
# If you set COOKIE_SAMESITE=none you MUST set COOKIE_SECURE=true (HTTPS).
COOKIE_SAMESITE=lax
COOKIE_SECURE=false

# MySQL
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3306
MYSQL_USER=app_user
MYSQL_PASSWORD=app_password
MYSQL_DATABASE=app_db
